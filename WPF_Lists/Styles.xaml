<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Style_Default" TargetType="Control">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontSize" Value="20"/>
    </Style>
    
    <Style x:Key="Style_Input" TargetType="Control"
           BasedOn="{StaticResource Style_Default}">
        <Setter Property="Width" Value="300"/>
    </Style>
    <Style x:Key="Style_Label_Input" TargetType="Control"
           BasedOn="{StaticResource Style_Default}">
        <Setter Property="Width" Value="170"/>
    </Style>
    
    <Style x:Key="Style_Button" TargetType="Button"
           BasedOn="{StaticResource Style_Default}">
        <Setter Property="Width" Value="150"/>
    </Style>
</ResourceDictionary>